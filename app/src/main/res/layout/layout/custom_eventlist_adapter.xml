<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border"
    android:padding="6dp">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="4dp"
        android:id="@+id/linearLayout"
        android:paddingLeft="10dp">

        <ImageView
            android:id="@+id/event_image"
            android:layout_width="84dp"
            android:layout_height="84dp"
            android:layout_margin="4dp"
            android:layout_marginLeft="12dp"
            android:src="@mipmap/logo"
            android:padding="3dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:paddingLeft="6dp">

            <TextView
                android:id="@+id/event_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/event_image"
                android:layout_toRightOf="@+id/event_image"
                android:text="Large Text"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ffffff"
                android:textSize="16.5dp"
                android:singleLine="true" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp">

                <com.joanzapata.iconify.widget.IconTextView
                android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Medium Text"
                    android:id="@+id/event_time_txtView"
                    android:layout_alignBottom="@+id/event_image"
                    android:layout_toRightOf="@+id/event_image"
                    android:layout_toEndOf="@+id/event_image"
                    android:backgroundTint="#3b3636"
                    android:textColor="#e5e5e5"
                    android:textSize="14dp"
                    android:gravity="left"
                    android:layout_weight=".3" />

                <com.joanzapata.iconify.widget.IconTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Ãœcretsiz"
                    android:id="@+id/event_price_txtView"
                    android:singleLine="true"
                    android:layout_weight=".3"
                    android:gravity="left"
                    android:textSize="14dp"
                    android:textColor="#e5e5e5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Detay"
                    android:id="@+id/event_details_textView"
                    android:singleLine="true"
                    android:layout_weight=".3"
                    android:gravity="center"
                    android:textSize="14dp"
                    android:textColor="#e5e5e5"
                    android:background="#145f87"
                    android:padding="3dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>